<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.PostDetailsController"
      spacing="15" styleClass="content-container">

    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <!-- Header avec bouton retour -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button fx:id="backBtn" text="â† Retour" onAction="#goBack" 
                style="-fx-background-color: #666; -fx-text-fill: white;"/>
    </HBox>

    <!-- Informations du post -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label fx:id="titleLabel" text="Titre du post" 
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <HBox spacing="15">
            <Label fx:id="authorLabel" text="Par: Auteur" 
                   style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
            <Label fx:id="dateLabel" text="Date" 
                   style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
        </HBox>
        <TextArea fx:id="contentArea" editable="false" wrapText="true" 
                  prefRowCount="5" style="-fx-background-color: #f9f9f9;"/>
    </VBox>

    <!-- Section commentaires -->
    <Label text="ðŸ’¬ Commentaires" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <!-- Liste des commentaires -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" 
                style="-fx-background-color: #F5F5F5; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <VBox fx:id="commentsBox" spacing="15" style="-fx-background-color: #F5F5F5;">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </VBox>
    </ScrollPane>

    <!-- Ajouter un commentaire -->
    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-radius: 5;">
        <Label text="Ajouter un commentaire" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="newCommentArea" promptText="Ã‰crivez votre commentaire..." 
                  wrapText="true" prefRowCount="3"/>
        <Button fx:id="addCommentBtn" text="Publier" onAction="#addComment"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </VBox>

</VBox>
