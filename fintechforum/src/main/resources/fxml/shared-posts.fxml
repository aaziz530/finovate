<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.SharedPostsController"
      spacing="15" styleClass="content-container">

    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label fx:id="titleLabel" text="Postes Partagés" styleClass="section-title"/>
    </HBox>

    <!-- Liste des postes partagés -->
    <ListView fx:id="sharedPostsList" VBox.vgrow="ALWAYS" styleClass="list-view"/>

    <!-- Message si vide -->
    <Label fx:id="emptyLabel" text="Aucun poste partagé" 
           styleClass="empty-label" visible="false" managed="false"/>

</VBox>
