<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.controller.ForumsController"
      spacing="15" prefWidth="400">


    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <!-- Header avec bouton Créer Forum -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="titleLabel" text="Mes Forums" styleClass="section-title"/>
        <javafx.scene.layout.Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="createForumBtn" text="+ Créer un Forum"
                onAction="#openCreateForumDialog" styleClass="create-button"/>
    </HBox>

    <!-- Message si vide -->
    <Label fx:id="emptyLabel" text="Aucun forum disponible"
           styleClass="empty-message" visible="false" managed="false"/>

    <!-- Liste des forums avec scroll -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                styleClass="scroll-pane">
        <ListView fx:id="forumsList" styleClass="forums-list"/>
    </ScrollPane>

</VBox>