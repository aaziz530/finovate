<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.esprit.finovate.controllers.ChatbotController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
            <padding>
                <Insets bottom="16.0" left="20.0" right="20.0" top="16.0" />
            </padding>
            <children>
                <Label text="Finovate AI" textFill="#237f4e">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Label text="(Comptabilité • Finance • Banque)" textFill="#8898aa">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Label>
                <HBox HBox.hgrow="ALWAYS" />
                <Label fx:id="statusLabel" text="" textFill="#8898aa" />
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="12.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS" style="-fx-background: transparent; -fx-background-color: transparent;">
                    <content>
                        <VBox fx:id="messagesBox" spacing="10.0" />
                    </content>
                </ScrollPane>

                <HBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                    <padding>
                        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
                    </padding>
                    <children>
                        <TextField fx:id="messageField" promptText="Pose une question (ex: TVA, bilan, amortissement, crédit...)" HBox.hgrow="ALWAYS" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 10;" />
                        <Button fx:id="sendButton" mnemonicParsing="false" onAction="#handleSend" text="Envoyer" style="-fx-background-color: #237f4e; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand; -fx-font-weight: bold;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
