<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>

<ScrollPane fitToWidth="true" style="-fx-background: #f7f9fc; -fx-background-color: #f7f9fc; -fx-border-color: transparent;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.esprit.finovate.controllers.UserProfileController">
   <content>
      <VBox alignment="TOP_CENTER" spacing="30.0" style="-fx-background-color: #f7f9fc;">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <VBox maxWidth="600.0" spacing="30.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 10, 0, 0, 2);">
               <children>
                  <VBox spacing="5.0">
                     <children>
                        <Label text="My Profile" textFill="#32325d">
                           <font>
                              <Font name="System Bold" size="24.0" />
                           </font>
                        </Label>
                        <Label text="Update your personal account information." textFill="#8898aa">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  
                  <GridPane hgap="20.0" vgap="15.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                    </columnConstraints>
                    <children>
                      <Label text="First Name:" textFill="#525f7f" GridPane.rowIndex="0">
                         <font><Font name="System Bold" size="14.0" /></font>
                      </Label>
                      <TextField fx:id="firstNameField" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-text-fill: #32325d;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                      
                      <Label text="Last Name:" textFill="#525f7f" GridPane.rowIndex="1">
                         <font><Font name="System Bold" size="14.0" /></font>
                      </Label>
                      <TextField fx:id="lastNameField" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-text-fill: #32325d;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                      
                      <Label text="Email Address:" textFill="#525f7f" GridPane.rowIndex="2">
                         <font><Font name="System Bold" size="14.0" /></font>
                      </Label>
                      <TextField fx:id="emailField" editable="false" style="-fx-background-color: #e9ecef; -fx-border-color: #dee2e6; -fx-text-fill: #32325d;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                      
                      <Label text="CIN:" textFill="#525f7f" GridPane.rowIndex="3">
                         <font><Font name="System Bold" size="14.0" /></font>
                      </Label>
                      <TextField fx:id="cinField" editable="false" style="-fx-background-color: #e9ecef; -fx-border-color: #dee2e6; -fx-text-fill: #32325d;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                      
                      <Label text="Card Number:" textFill="#525f7f" GridPane.rowIndex="4">
                         <font><Font name="System Bold" size="14.0" /></font>
                      </Label>
                      <TextField fx:id="numeroCarteField" editable="false" style="-fx-background-color: #e9ecef; -fx-border-color: #dee2e6; -fx-text-fill: #32325d;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                      
                      <Label text="Birth Date:" textFill="#525f7f" GridPane.rowIndex="5">
                         <font><Font name="System Bold" size="14.0" /></font>
                      </Label>
                      <DatePicker fx:id="birthDatePicker" maxWidth="Infinity" style="-fx-background-color: #f8f9fa; -fx-text-fill: #32325d;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                    </children>
                  </GridPane>

                  <VBox spacing="10.0">
                     <children>
                        <Label fx:id="errorLabel" textFill="#dc3545" visible="false" wrapText="true" />
                        <Button fx:id="btnSave" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleSave" style="-fx-background-color: #237f4e; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-font-weight: bold;" text="Save Changes">
                           <padding>
                              <Insets bottom="12.0" top="12.0" />
                           </padding>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </content>
</ScrollPane>
