<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.esprit.finovate.controllers.AdminDashboardController">
   <!-- Top Navigation Bar -->
   <top>
      <HBox alignment="CENTER_LEFT" style="-fx-background-color: #237f4e; -fx-padding: 20; -fx-font-family: 'Poppins';">
         <children>
            <Label text="FINOVATE" textFill="white">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Label>
            
            <Label text="Admin Dashboard" textFill="white">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            
            <!-- Spacer -->
            <HBox HBox.hgrow="ALWAYS" />
            
            <!-- Welcome Admin Label -->
            <Label fx:id="adminNameLabel" text="Welcome, Admin" textFill="white">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
            
            <!-- Logout Button -->
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-background-radius: 6; -fx-cursor: hand; -fx-font-weight: bold;" text="Logout">
               <padding>
                  <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </top>
   
   <center>
      <VBox spacing="25.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <!-- Statistics Cards Section -->
            <HBox spacing="20.0" VBox.vgrow="NEVER">
               <children>
                  <!-- Total Users Card -->
                  <VBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="Total Users" textFill="#6c757d">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="8.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="totalUsersLabel" text="0" textFill="#237f4e">
                           <font>
                              <Font name="System Bold" size="36.0" />
                           </font>
                        </Label>
                        <Label text="Registered accounts" textFill="#adb5bd">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
                  
                  <!-- Total Reclamations Card -->
                  <VBox alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="Reclamations" textFill="#6c757d">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="8.0" />
                           </VBox.margin>
                        </Label>
                        <Label fx:id="totalReclamationsLabel" text="0" textFill="#ffc107">
                           <font>
                              <Font name="System Bold" size="36.0" />
                           </font>
                        </Label>
                        <Label text="Pending issues" textFill="#adb5bd">
                           <font>
                              <Font size="12.0" />
                           </font>
                           <VBox.margin>
                              <Insets top="5.0" />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </HBox>
            
            <!-- Users Management Section -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </padding>
               <children>
                  <!-- Header with Search -->
                  <HBox alignment="CENTER_LEFT" spacing="15.0">
                     <children>
                        <Label text="User Management" textFill="#495057">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Label>
                        
                        <!-- Spacer -->
                        <HBox HBox.hgrow="ALWAYS" />
                        
                        <!-- Search Field -->
                        <TextField fx:id="searchField" onKeyReleased="#handleSearch" promptText="Search users..." style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 10;" prefWidth="300.0" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </HBox>
                  
                  <!-- Users Table -->
                  <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="firstNameColumn" prefWidth="150.0" text="First Name" />
                        <TableColumn fx:id="lastNameColumn" prefWidth="150.0" text="Last Name" />
                        <TableColumn fx:id="emailColumn" prefWidth="200.0" text="Email" />
                        <TableColumn fx:id="roleColumn" prefWidth="100.0" text="Role" />
                        <TableColumn fx:id="pointsColumn" prefWidth="100.0" text="Points" />
                        <TableColumn fx:id="soldeColumn" prefWidth="120.0" text="Balance" />
                        <TableColumn fx:id="createdAtColumn" prefWidth="140.0" text="Created At" />
                        <TableColumn fx:id="cinColumn" prefWidth="180.0" text="CIN" />
                        <TableColumn fx:id="numeroCarteColumn" prefWidth="180.0" text="Card Number" />
                        <TableColumn fx:id="actionsColumn" prefWidth="180.0" text="Actions" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
