<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.esprit.finovate.controllers.LoginPlaceholderController"
            prefHeight="600" prefWidth="1000"
            styleClass="root" stylesheets="@../css/style.css">
    <center>
        <VBox alignment="CENTER" spacing="20" styleClass="login-box">
            <padding>
                <Insets bottom="40" left="50" right="50" top="40"/>
            </padding>
            <Label text="FINOVATE" styleClass="logo-title"/>
            <Label text="Enter User ID to access dashboard" styleClass="subtitle" wrapText="true"/>
            <TextField fx:id="txtUserId" promptText="User ID (e.g. 1)" prefWidth="200"/>
            <Button text="Enter Dashboard" onAction="#handleEnter" styleClass="btn-primary" prefWidth="200"/>
        </VBox>
    </center>
</BorderPane>
