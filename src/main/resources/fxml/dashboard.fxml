<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.esprit.finovate.controllers.DashboardController"
            prefHeight="600" prefWidth="1000"
            styleClass="root" stylesheets="@../css/style.css">
    <left>
        <VBox styleClass="sidebar" prefWidth="220" spacing="0">
            <padding><Insets top="24" right="16" bottom="24" left="24"/></padding>
            <Label text="Finovate" styleClass="sidebar-logo"/>
            <Label text="MAIN MENU" styleClass="sidebar-section-title"/>
            <VBox styleClass="sidebar-menu" spacing="4">
                <Button fx:id="btnAdminDashboard" text="Admin Dashboard" onAction="#handleAdminDashboard" styleClass="sidebar-btn" visible="false" managed="false"/>
                <Button text="Add Project" onAction="#handleAddProject" styleClass="sidebar-btn"/>
                <Button text="My Projects" onAction="#handleMyProjects" styleClass="sidebar-btn"/>
                <Button text="My Investments" onAction="#handleMyInvestments" styleClass="sidebar-btn"/>
            </VBox>
            <VBox VBox.vgrow="ALWAYS"/>
            <Label text="ACCOUNT" styleClass="sidebar-section-title"/>
            <Button text="Sign Out" onAction="#handleSwitchUser" styleClass="sidebar-btn-signout"/>
        </VBox>
    </left>
    <center>
        <VBox alignment="TOP_LEFT" spacing="16" styleClass="dashboard-content">
            <padding><Insets top="24" right="32" bottom="32" left="32"/></padding>
            <Label text="All Projects" styleClass="section-title"/>
            <HBox spacing="12" alignment="CENTER_LEFT">
                <TextField fx:id="txtSearchDynamic" promptText="Recherche dynamique..." prefWidth="220"/>
                <ComboBox fx:id="comboStatus" promptText="Statut" prefWidth="120"/>
                <Button text="Rechercher" onAction="#handleStaticSearch" styleClass="btn-secondary"/>
                <ComboBox fx:id="comboTri" promptText="Trier par" prefWidth="140"/>
            </HBox>
            <ScrollPane fitToWidth="true" styleClass="projects-scroll" VBox.vgrow="ALWAYS">
                <VBox fx:id="projectsContainer" spacing="12"/>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
