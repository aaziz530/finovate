<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.esprit.finovate.controllers.MyProjectsController"
            prefHeight="720" prefWidth="1280"
            styleClass="root" stylesheets="@../css/style.css">
    <top>
        <VBox alignment="CENTER_LEFT" styleClass="form-header">
            <padding>
                <Insets left="24" right="24" top="20" bottom="20"/>
            </padding>
            <Label text="My Projects" styleClass="form-title"/>
            <Label text="Projects you created â€” edit or delete only if no one has invested yet" styleClass="form-subtitle"/>
        </VBox>
    </top>
    <center>
        <VBox styleClass="form-outer" alignment="TOP_LEFT">
            <padding>
                <Insets top="28" left="36" right="36" bottom="36"/>
            </padding>
            <VBox spacing="20" alignment="TOP_LEFT" styleClass="form-content">
            <Label text="Your projects" styleClass="section-title"/>
            <HBox styleClass="toolbar-card" spacing="12" alignment="CENTER_LEFT">
                <TextField fx:id="txtSearchDynamic" promptText="Recherche dynamique..." prefWidth="240"/>
                <ComboBox fx:id="comboStatus" promptText="Statut" prefWidth="130"/>
                <Button text="Rechercher" onAction="#handleStaticSearch" styleClass="btn-primary"/>
                <ComboBox fx:id="comboTri" promptText="Trier par" prefWidth="150"/>
            </HBox>
            <ScrollPane fitToWidth="true" styleClass="projects-scroll" VBox.vgrow="ALWAYS">
                <VBox fx:id="projectsContainer" spacing="12"/>
            </ScrollPane>
            <Button text="Back to Dashboard" onAction="#handleBack" styleClass="btn-secondary" prefWidth="180"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
