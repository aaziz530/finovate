<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #f0fdf4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.esprit.finovate.controllers.AuthController">
   <children>
      <VBox alignment="CENTER" maxWidth="450.0" prefWidth="450.0" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 5);" VBox.vgrow="NEVER">
         <padding>
            <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
         </padding>
         <children>
            <Label text="FINOVATE" textFill="#237f4e">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            
            <Label text="Forgot Password?" textFill="#6c757d">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>

            <Label text="Enter your email to receive a reset code" textAlignment="CENTER" textFill="#6c757d" wrapText="true">
               <font>
                  <Font size="13.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            
            <VBox spacing="8.0">
               <children>
                  <Label text="Email Address" textFill="#495057">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <TextField fx:id="resetEmailField" promptText="Enter your email" style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12;" />
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </VBox>
            
            <Label fx:id="resetErrorLabel" textFill="#dc3545" wrapText="true">
               <font>
                  <Font size="12.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            
            <Button fx:id="sendCodeButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleSendResetCode" style="-fx-background-color: #237f4e; -fx-text-fill: white; -fx-background-radius: 5; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-font-family: 'Poppins';" text="Send Reset Code">
               <padding>
                  <Insets bottom="14.0" top="14.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
            
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Remembered your password?" textFill="#6c757d">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Label>
                  <Hyperlink onAction="#handleLoginLink" text="Back to Login" textFill="#237f4e">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Hyperlink>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
